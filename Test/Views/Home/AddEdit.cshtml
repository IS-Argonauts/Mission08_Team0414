@{
    ViewData["Title"] = Model.TaskId == 0 ? "Add Task" : "Edit Task";  // Set title dynamically based on TaskId
}

@model Test.Models.ToDo

<div class="container">
    <!-- Wrap the form in a container -->

    <form asp-action="SaveTask" method="post" class="form-container">
        <h2>@ViewData["Title"]</h2>
        <!-- Hidden field for Task ID (used for editing) -->
        <input type="hidden" asp-for="TaskId" />

        <!-- Task Name -->
        <div class="form-group">
            <label asp-for="TaskName" class="control-label">Task</label>
            <input asp-for="TaskName" class="form-control" required />
            <span asp-validation-for="TaskName" class="text-danger"></span>
        </div>

        <!-- Due Date -->
        <div class="form-group">
            <label asp-for="DueDate" class="control-label">Due Date</label>
            <input asp-for="DueDate" type="date" class="form-control" />
        </div>

        <!-- Quadrant Dropdown -->
        <div class="form-group">
            <label asp-for="Quadrant" class="control-label">Quadrant</label>
            <select asp-for="Quadrant" class="form-control" required>
                <option value="">Select Quadrant</option>
                <option value="1">Quadrant I: Important / Urgent</option>
                <option value="2">Quadrant II: Important / Not Urgent</option>
                <option value="3">Quadrant III: Not Important / Urgent</option>
                <option value="4">Quadrant IV: Not Important / Not Urgent</option>
            </select>
            <span asp-validation-for="Quadrant" class="text-danger"></span>
        </div>

        <!-- Category Dropdown -->
        <div class="form-group">
            <label asp-for="Category" class="control-label">Category</label>
            <select asp-for="Category" asp-items="ViewBag.Categories" class="form-control">
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <!-- Completed Checkbox -->
        <div class="form-group form-check">
            <input asp-for="Completed" class="form-check-input" type="checkbox" />
            <label asp-for="Completed" class="form-check-label">Completed</label>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save Task</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>